{
  "pluginAlias": "HomebridgeHTTPLeakSensor",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Leak Sensor"
      },
      "url": {
        "title": "URL",
        "type": "string",
        "required": true,
        "default": "http://localhost/status"
      },
      "pollInterval": {
        "title": "Poll Interval",
        "type": "number",
        "required": true,
        "default": 60,
        "minimum": 1
      },
      "failedRequestsLimit": {
        "title": "Failed Requests Limit",
        "type": "number",
        "required": true,
        "default": 120,
        "minimum": 0
      },
      "manufacturer": {
        "title": "Manufacturer",
        "type": "string",
        "required": false,
        "default": "Homebridge"
      },
      "model": {
        "title": "Model",
        "type": "string",
        "required": false,
        "default": "HTTP Leak Sensor"
      },
      "serialNumber": {
        "title": "Serial Number",
        "type": "string",
        "required": false,
        "default": "000000"
      }
    }
  }
}
